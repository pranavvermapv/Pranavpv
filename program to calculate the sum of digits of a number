#include <stdio.h>

int main()
{
    int a, remainder,sum=0;
    
    printf("enter the number : ");
    scanf("%d",&a);
    
    while(a!=0)
    {
        remainder=a%10;
        sum=sum+remainder;
        a=a/10;
    }
    
    printf("the sum of the digits in the number is %d ",sum);
    return 0;
}
